<div class="post">
  <h1>{{post.title}}</h1>
  <p>By {{post.user.username}} on {{post.createdAt}}</p>
  <p>{{post.content}}</p>
</div>

<div id="comments">
  <h2>Comments</h2>
  {{#each post.comments}}
    <div class="comment">
      <p>{{content}}</p>
      <p>By {{user.username}} on {{createdAt}}</p>
    </div>
  {{else}}
    <p>No comments yet. Be the first to comment!</p>
  {{/each}}

  {{#if logged_in}}
    <form id="comment-form">
      <textarea id="comment-content" placeholder="Write your comment here..." required></textarea>
      <button type="submit">Comment</button>
    </form>
  {{else}}
    <p><a href="/login">Log in</a> to leave a comment.</p>
  {{/if}}
</div>
